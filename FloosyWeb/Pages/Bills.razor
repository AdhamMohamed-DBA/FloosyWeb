@page "/bills"
@using FloosyWeb.Models
@inject FirebaseService Firebase
@inject IJSRuntime JS
@inject LocalizationService L

<div class="page-section" style="padding-bottom:88px;" id="billsTop">

    <div class="section-header" style="margin-bottom:20px;">
        <h3 style="margin:0;">@L.T("BillsTitle")</h3>
        <AppButton Text="@L.T("NewMonth")"
                   Icon="🔄"
                   Style="font-size:12px; width:auto; background:#3498db; color:white;"
                   AriaLabel="@L.T("NewMonthAria")"
                   OnClick="@(_ => { isResetConfirmVisible = true; return Task.CompletedTask; })" />
    </div>

    <div class="card" style="padding:15px; margin-bottom:25px;">
        <h4 style="color:#00E676; margin-top:0;">@(isEditMode ? L.T("EditBill") : L.T("NewBill"))</h4>

        <AppInput Value="@(currentBill.Name ?? string.Empty)"
                  ValueChanged="@(v => currentBill.Name = v)"
                  Placeholder="@L.T("BillName")"
                  AriaLabel="Bill name" />
        <input type="number" @bind="currentBill.Amount" placeholder="@L.T("Amount")" class="input-dark" aria-label="Bill amount" />

        <div style="display:flex; gap:5px;">
            <AppSelect Value="@currentBill.Category"
                       ValueChanged="@(v => currentBill.Category = v)"
                       Options="@BillCategoryOptions"
                       Style="flex:1;" />
            <button class="icon-btn" style="background:#333; color:white; border-radius:8px; width:40px; margin-bottom:10px;" @onclick="() => isManageCatsVisible = true" aria-label="Manage bill categories" title="Manage bill categories">⚙️</button>
        </div>

        <div style="display:flex; gap:5px;">
            <AppSelect Value="@currentBill.Frequency"
                       ValueChanged="@(v => currentBill.Frequency = v)"
                       Options="@FrequencyOptions"
                       Style="flex:1;" />
            <input type="date" @bind="currentBill.DueDate" class="input-dark" style="flex:1;" />
        </div>

        <div style="margin-bottom:10px; padding:10px; background:#2a2a2a; border-radius:8px;">
            <div style="display:flex; align-items:center; gap:10px; margin-bottom:5px;">
                <input type="checkbox" @bind="currentBill.IsShared" style="width:18px; height:18px; accent-color:#00E676;" />
                <span style="color:#ccc;">@L.T("SharedBill")</span>
            </div>
            @if (currentBill.IsShared)
            {
                <div style="display:flex; gap:8px; align-items:center; margin-bottom:8px;">
                    <input @bind="newParticipantName" class="input-dark" placeholder="@L.T("PersonName")" style="margin-bottom:0;" />
                    <input type="number" @bind="newParticipantAmount" class="input-dark" placeholder="@L.T("Amount")" style="max-width:120px; margin-bottom:0;" />
                    <AppButton Text="+"
                               Style="width:auto; min-width:44px; margin-bottom:0;"
                               AriaLabel="Add shared participant"
                               OnClick="@(_ => { AddParticipantToCurrentBill(); return Task.CompletedTask; })" />
                </div>

                @if (currentBill.Participants.Any())
                {
                    <div style="display:flex; flex-direction:column; gap:6px; margin-bottom:8px;">
                        @foreach (var p in currentBill.Participants)
                        {
                            <div style="display:flex; align-items:center; gap:8px; background:#242424; padding:8px; border-radius:8px;">
                                <input type="checkbox"
                                       checked="@p.IsPaid"
                                       @onchange="@(e => OnCurrentParticipantPaidChanged(p, e))"
                                       style="width:18px; height:18px; accent-color:#00E676; margin:0;" />
                                <span style="flex:1; color:white;">@p.Name</span>
                                <span style="color:@(p.IsPaid ? "#2ecc71" : "#ffcc66"); font-size:12px;">@p.Amount.ToString("N2")</span>
                                <button class="icon-btn"
                                        style="font-size:13px; color:#e74c3c;"
                                        @onclick="@(() => RemoveParticipantFromCurrentBill(p.Id))"
                                        aria-label="Remove participant"
                                        title="Remove participant">🗑️</button>
                            </div>
                        }
                    </div>

                    <div style="font-size:12px; color:#aaa;">
                        @L.T("Paid"): <span style="color:#2ecc71;">@CurrentSharedPaidTotal.ToString("N2")</span>
                        • @L.T("Remaining"): <span style="color:#ffcc66;">@CurrentSharedRemainingTotal.ToString("N2")</span>
                    </div>
                }
            }
        </div>

        <AppButton Text="@(isEditMode ? L.T("UpdateBill") : L.T("AddBill"))"
                   LoadingText="Saving..."
                   IsLoading="@isSavingBill"
                   Disabled="@isSavingBill"
                   Style="width:100%;"
                   OnClick="@(async _ => await SaveBill())" />
        @if (isEditMode)
        {
            <AppButton Text="@L.T("CancelEdit")"
                       Variant="ghost"
                       Style="width:100%; margin-top:5px;"
                       OnClick="@(_ => { CancelEdit(); return Task.CompletedTask; })" />
        }
    </div>

    @foreach (var bill in myData.Bills.OrderBy(x => x.IsPaid).ThenBy(x => x.DueDate))
    {
        <div style="background:#1f1f1f; padding:20px; border-left: 6px solid @(bill.IsPaid ? "#2ecc71" : "#e74c3c"); margin-bottom:15px; border-radius:10px; display:flex; justify-content:space-between; align-items:center;">
            <div style="flex:1; cursor:pointer;" @onclick="() => EditBill(bill)">
                <div style="font-weight:900; font-size:1.2em; color:white;">@bill.Name</div>
                <div style="font-size:0.9em; color:#bbb;">@bill.Category • @bill.DueDate.ToString("dd MMM")</div>
                <div style="display:flex; gap:5px; flex-wrap:wrap; align-items:center;">
                    @if (bill.IsRecurring)
                    {
                        <span class="badge">@bill.Frequency</span>
                    }
                    @if (bill.IsShared)
                    {
                        <span class="badge" style="border-color:#3498db; color:#3498db;">@L.T("Shared")</span>
                    }
                </div>
                @if (bill.IsShared)
                {
                    <div style="margin-top:8px; padding-top:8px; border-top:1px solid #333; font-size:0.8em; color:#bbb;">
                        @if (bill.Participants.Any())
                        {
                            @foreach (var p in bill.Participants)
                            {
                                <div style="display:flex; align-items:center; justify-content:space-between; gap:8px; margin-bottom:4px;">
                                    <div style="display:flex; align-items:center; gap:6px;" @onclick:stopPropagation="true">
                                        <input type="checkbox"
                                               checked="@p.IsPaid"
                                               @onchange="@(async e => await ToggleParticipantPaidOnCard(bill, p, e))"
                                               style="width:16px; height:16px; accent-color:#00E676; margin:0;" />
                                        <span>@p.Name</span>
                                    </div>
                                    <span style="color:@(p.IsPaid ? "#2ecc71" : "#ffcc66")">@p.Amount.ToString("N2")</span>
                                </div>
                            }

                            <div style="margin-top:6px; color:#aaa;">
                                ✅ @L.T("Paid"): @GetParticipantsPaidTotal(bill).ToString("N2") • ⏳ @L.T("Remaining"): @GetParticipantsRemainingTotal(bill).ToString("N2")
                            </div>
                        }
                        else
                        {
                            <div>👥 <b>@L.T("With")</b> @bill.SharedWith</div>
                            <div>📝 <b>@L.T("Status")</b> @bill.Notes</div>
                        }
                    </div>
                }
            </div>
            <div style="text-align:right;">
                <div style="font-weight:bold; font-size:1.4em; color:white; margin-bottom:10px;">@bill.Amount.ToString("N0")</div>
                <div style="display:flex; gap:10px; justify-content:flex-end;">
                    @if (!bill.IsPaid)
                    {
                        <AppButton Text="@L.T("Pay")"
                                   Style="width:auto; margin-bottom:0; padding:5px 15px; background:#ff9800; color:black; border-radius:5px;"
                                   OnClick="@(_ => { InitiatePayBill(bill); return Task.CompletedTask; })" />
                    }
                    <button class="icon-btn" style="font-size:16px;" @onclick="() => ConfirmDeleteBill(bill)" aria-label="Delete bill" title="Delete bill">🗑️</button>
                </div>
            </div>
        </div>
    }
</div>

@if (isMessageVisible)
{
    <AppModal Visible="@isMessageVisible" Style="text-align:center;">
        <ChildContent>
            <h3 style="margin-top:0; color:#e74c3c;">@messageTitle</h3>
            <p style="color:#ccc; margin-bottom:20px; font-size:14px;">@messageBody</p>
        </ChildContent>
        <FooterContent>
            <AppButton Text="@L.T("Ok")"
                       Style="padding:10px;"
                       OnClick="@(_ => { isMessageVisible = false; return Task.CompletedTask; })" />
        </FooterContent>
    </AppModal>
}

@if (isDeleteBillConfirmVisible)
{
    <AppModal Visible="@isDeleteBillConfirmVisible" Style="text-align:center;">
        <ChildContent>
            <h3 style="color:#e74c3c;">@L.T("DeleteBillQuestion")</h3>
            <p style="color:#ccc;">@L.T("Delete") <b>@billToDelete?.Name</b>?</p>
        </ChildContent>
        <FooterContent>
            <div style="display:flex; gap:10px;">
                <AppButton Text="@L.T("Delete")"
                           Style="background:#e74c3c; color:white; flex:1;"
                           OnClick="@(async _ => await ExecuteDeleteBill())" />
                <AppButton Text="@L.T("Cancel")"
                           Variant="ghost"
                           Style="flex:1;"
                           OnClick="@(_ => { isDeleteBillConfirmVisible = false; return Task.CompletedTask; })" />
            </div>
        </FooterContent>
    </AppModal>
}

@if (isResetConfirmVisible)
{
    <AppModal Visible="@isResetConfirmVisible" Style="text-align:center;">
        <ChildContent>
            <h3 style="color:#3498db;">@L.T("NewMonthQuestion")</h3>
            <p style="color:#ccc;">@L.T("NewMonthConfirm")</p>
        </ChildContent>
        <FooterContent>
            <div style="display:flex; gap:10px;">
                <AppButton Text="@L.T("Yes")"
                           Style="background:#3498db; color:white; flex:1;"
                           OnClick="@(async _ => await ExecuteResetMonthly())" />
                <AppButton Text="@L.T("Cancel")"
                           Variant="ghost"
                           Style="flex:1;"
                           OnClick="@(_ => { isResetConfirmVisible = false; return Task.CompletedTask; })" />
            </div>
        </FooterContent>
    </AppModal>
}

@if (isManageCatsVisible)
{
    <AppModal Visible="@isManageCatsVisible" Title="@L.T("ManageCategories")" Style="z-index:2100;">
        <ChildContent>
            <div style="display:flex; gap:5px; margin-bottom:15px;">
                <input @bind="newCatName" class="input-dark" placeholder="@L.T("NewCategory")" style="margin-bottom:0;" />
                <AppButton Text="+"
                           Style="width:auto;"
                           AriaLabel="Add category"
                           OnClick="@(async _ => await AddCategory())" />
            </div>
            <div style="max-height:200px; overflow-y:auto;">
                @foreach (var c in myData.BillCategories.ToList())
                {
                    <div style="display:flex; justify-content:space-between; padding:10px; border-bottom:1px solid #333; color:white;">
                        <span>@c</span>
                        <button class="btn-auto" style="color:#e74c3c; background:none; border:none;" @onclick="() => DeleteCategory(c)" aria-label="Delete category" title="Delete category">✕</button>
                    </div>
                }
            </div>
        </ChildContent>
        <FooterContent>
            <AppButton Text="@L.T("Close")"
                       Variant="ghost"
                       Style="width:100%; margin-top:10px;"
                       OnClick="@(_ => { isManageCatsVisible = false; return Task.CompletedTask; })" />
        </FooterContent>
    </AppModal>
}

@if (isPayModalVisible)
{
    <AppModal Visible="@isPayModalVisible" Title="@L.T("PayBill")">
        <ChildContent>
            <p>@selectedBillToPay?.Name - @selectedBillToPay?.Amount.ToString("N2")</p>
            <label>@L.T("FromAccount")</label>
            <AppSelect Value="@payFromAccountId"
                       ValueChanged="@(v => payFromAccountId = v)"
                       Options="@PayAccountOptions" />
        </ChildContent>
        <FooterContent>
            <div style="display:flex; gap:10px; margin-top:10px;">
                <AppButton Text="@L.T("Pay")"
                           LoadingText="@L.T("Processing")"
                           IsLoading="@isPayingBill"
                           Disabled="@isPayingBill"
                           OnClick="@(async _ => await ConfirmPayBill())" />
                <AppButton Text="@L.T("Cancel")"
                           Variant="ghost"
                           OnClick="@(_ => { isPayModalVisible = false; return Task.CompletedTask; })" />
            </div>
        </FooterContent>
    </AppModal>
}

@code {
    AppData myData = new AppData();
    Bill currentBill = new Bill { DueDate = DateTime.Now };

    // UI Flags
    bool isEditMode = false;
    bool isManageCatsVisible = false;
    bool isPayModalVisible = false;
    bool isSavingBill = false;
    bool isPayingBill = false;

    // 🔥 New Modal Flags
    bool isMessageVisible = false;
    string messageTitle = "";
    string messageBody = "";

    bool isDeleteBillConfirmVisible = false;
    Bill? billToDelete;

    bool isResetConfirmVisible = false;

    string newCatName = "";
    string newParticipantName = "";
    decimal newParticipantAmount = 0;
    Bill? selectedBillToPay;
    string payFromAccountId = "";

    IEnumerable<KeyValuePair<string, string>> BillCategoryOptions =>
        myData.BillCategories.Select(c => new KeyValuePair<string, string>(c, c));

    IEnumerable<KeyValuePair<string, string>> FrequencyOptions =>
        new[]
        {
            new KeyValuePair<string, string>("OneTime", L.IsArabic ? "مرة واحدة" : "OneTime"),
            new KeyValuePair<string, string>("Monthly", L.T("Monthly")),
            new KeyValuePair<string, string>("Quarterly", L.IsArabic ? "ربع سنوي" : "Quarterly"),
            new KeyValuePair<string, string>("Yearly", L.IsArabic ? "سنوي" : "Yearly")
        };

    IEnumerable<KeyValuePair<string, string>> PayAccountOptions =>
        myData.Accounts.Select(a => new KeyValuePair<string, string>(a.Id, $"{a.Name} ({a.Balance:N0})"));

    protected override async Task OnInitializedAsync()
    {
        myData = await Firebase.Load();
        if (!myData.BillCategories.Any()) myData.BillCategories.Add(L.T("Other"));

        foreach (var b in myData.Bills)
        {
            EnsureBillParticipants(b);
        }
    }

    async Task EditBill(Bill b)
    {
        EnsureBillParticipants(b);
        currentBill = b; isEditMode = true;
        await JS.InvokeVoidAsync("window.scrollTo", 0, 0); // Keep Scroll logic, it's UI utility not alert
    }
    void CancelEdit() { currentBill = new Bill { DueDate = DateTime.Now }; isEditMode = false; }

    async Task SaveBill()
    {
        if (string.IsNullOrEmpty(currentBill.Name)) return;
        isSavingBill = true;
        try
        {
            EnsureBillParticipants(currentBill);
            SyncSharedSummary(currentBill);
            if (!isEditMode) myData.Bills.Add(currentBill);
            await Firebase.Save(myData);
            CancelEdit();
        }
        finally
        {
            isSavingBill = false;
        }
    }

    void EnsureBillParticipants(Bill bill)
    {
        bill.Participants ??= [];
    }

    void SyncSharedSummary(Bill bill)
    {
        if (!bill.IsShared)
        {
            bill.SharedWith = "";
            bill.Notes = "";
            return;
        }

        var names = bill.Participants.Select(x => x.Name).Where(x => !string.IsNullOrWhiteSpace(x));
        bill.SharedWith = string.Join(", ", names);

        var paidNames = bill.Participants.Where(x => x.IsPaid).Select(x => x.Name).Where(x => !string.IsNullOrWhiteSpace(x));
        bill.Notes = paidNames.Any() ? $"{L.T("Paid")}: {string.Join(", ", paidNames)}" : (L.IsArabic ? "لا أحد دفع بعد" : "No one paid yet");
    }

    decimal CurrentSharedPaidTotal => currentBill.Participants.Where(x => x.IsPaid).Sum(x => x.Amount);
    decimal CurrentSharedRemainingTotal => currentBill.Participants.Where(x => !x.IsPaid).Sum(x => x.Amount);

    decimal GetParticipantsPaidTotal(Bill bill) => bill.Participants.Where(x => x.IsPaid).Sum(x => x.Amount);
    decimal GetParticipantsRemainingTotal(Bill bill) => bill.Participants.Where(x => !x.IsPaid).Sum(x => x.Amount);

    void AddParticipantToCurrentBill()
    {
        if (!currentBill.IsShared) return;

        var name = (newParticipantName ?? "").Trim();
        if (string.IsNullOrWhiteSpace(name)) return;
        if (newParticipantAmount <= 0) return;

        EnsureBillParticipants(currentBill);

        currentBill.Participants.Add(new BillParticipant
        {
            Name = name,
            Amount = newParticipantAmount,
            IsPaid = false
        });

        newParticipantName = "";
        newParticipantAmount = 0;
        SyncSharedSummary(currentBill);
    }

    void RemoveParticipantFromCurrentBill(string participantId)
    {
        EnsureBillParticipants(currentBill);
        var p = currentBill.Participants.FirstOrDefault(x => x.Id == participantId);
        if (p == null) return;

        currentBill.Participants.Remove(p);
        SyncSharedSummary(currentBill);
    }

    void OnCurrentParticipantPaidChanged(BillParticipant participant, ChangeEventArgs e)
    {
        var isChecked = e.Value is bool b && b;
        participant.IsPaid = isChecked;
        participant.PaidAt = isChecked ? DateTime.Now : null;
        SyncSharedSummary(currentBill);
    }

    async Task ToggleParticipantPaidOnCard(Bill bill, BillParticipant participant, ChangeEventArgs e)
    {
        var isChecked = e.Value is bool b && b;
        participant.IsPaid = isChecked;
        participant.PaidAt = isChecked ? DateTime.Now : null;
        SyncSharedSummary(bill);
        await Firebase.Save(myData);
    }

    // 🔥 Delete Logic replaced with Modal
    void ConfirmDeleteBill(Bill b)
    {
        billToDelete = b;
        isDeleteBillConfirmVisible = true;
    }
    async Task ExecuteDeleteBill()
    {
        if (billToDelete != null)
        {
            myData.Bills.Remove(billToDelete);
            await Firebase.Save(myData);
            isDeleteBillConfirmVisible = false;
        }
    }

    // 🔥 Reset Logic replaced with Modal
    async Task ExecuteResetMonthly()
    {
        foreach (var b in myData.Bills.Where(x => x.IsRecurring)) { b.IsPaid = false; b.PaymentDate = null; }
        await Firebase.Save(myData);
        isResetConfirmVisible = false;
    }

    async Task AddCategory() { if (!string.IsNullOrEmpty(newCatName)) { myData.BillCategories.Add(newCatName); await Firebase.Save(myData); newCatName = ""; } }
    async Task DeleteCategory(string c) { myData.BillCategories.Remove(c); await Firebase.Save(myData); }

    void InitiatePayBill(Bill b) { if (!myData.Accounts.Any()) return; selectedBillToPay = b; payFromAccountId = myData.Accounts.First().Id; isPayModalVisible = true; }

    async Task ConfirmPayBill()
    {
        if (selectedBillToPay == null) return;
        isPayingBill = true;
        try
        {
            var acc = myData.Accounts.FirstOrDefault(x => x.Id == payFromAccountId);
            if (acc != null)
            {
                if (acc.Balance < selectedBillToPay.Amount)
                {
                    // 🔥 Replaced Alert with Custom Modal
                    messageTitle = L.T("Error");
                    messageBody = L.T("InsufficientBalance");
                    isMessageVisible = true;
                    return;
                }
                acc.Balance -= selectedBillToPay.Amount;
                myData.History.Add(new Transaction { Desc = $"Paid: {selectedBillToPay.Name}", Category = "Bills", Amount = selectedBillToPay.Amount, AmountDisplay = $"-{selectedBillToPay.Amount:N2}", ColorHex = "#e74c3c", Date = DateTime.Now });
                selectedBillToPay.IsPaid = true; selectedBillToPay.PaymentDate = DateTime.Now;
                await Firebase.Save(myData); isPayModalVisible = false;
            }
        }
        finally
        {
            isPayingBill = false;
        }
    }
}