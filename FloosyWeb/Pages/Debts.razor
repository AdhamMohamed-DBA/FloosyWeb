        {
            <p class="muted" style="font-size:12px; margin-top:0;">No saved names yet.</p>
        }
        else
        {
            <div style="max-height:220px; overflow-y:auto; display:flex; flex-direction:column; gap:8px;">
                @foreach (var savedName in myData.SavedContactNames.OrderBy(x => x).ToList())
